@model SistemSekolahSMA.Models.Siswa

@{
    ViewData["Title"] = "Edit Siswa";
}

<h2>✏️ Edit Siswa</h2>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form asp-action="EditSiswa" method="post">
                    @Html.AntiForgeryToken()

                    <!-- Hidden field untuk ID dan CreatedDate -->
                    <input type="hidden" asp-for="SiswaId" />
                    <input type="hidden" asp-for="CreatedDate" />

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="NISN" class="control-label">NISN *</label>
                                <input asp-for="NISN" class="form-control" />
                                <span asp-validation-for="NISN" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="NamaSiswa" class="control-label">Nama Siswa *</label>
                                <input asp-for="NamaSiswa" class="form-control" />
                                <span asp-validation-for="NamaSiswa" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="KelasId" class="control-label">Kelas *</label>
                        <select asp-for="KelasId" class="form-select" asp-items="@(new SelectList(ViewBag.Kelas, "KelasId", "NamaKelas", Model.KelasId))">
                            <option value="">-- Pilih Kelas --</option>
                        </select>
                        <span asp-validation-for="KelasId" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="TempatLahir" class="control-label">Tempat Lahir</label>
                                <input asp-for="TempatLahir" class="form-control" />
                                <span asp-validation-for="TempatLahir" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="TanggalLahir" class="control-label">Tanggal Lahir</label>
                                <input asp-for="TanggalLahir" class="form-control" type="date" />
                                <span asp-validation-for="TanggalLahir" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="JenisKelamin" class="control-label">Jenis Kelamin</label>
                        <select asp-for="JenisKelamin" class="form-select">
                            <option value="">-- Pilih Jenis Kelamin --</option>
                            <option value="Laki-laki" selected="@("Laki-laki" == Model.JenisKelamin)">Laki-laki</option>
                            <option value="Perempuan" selected="@("Perempuan" == Model.JenisKelamin)">Perempuan</option>
                        </select>
                        <span asp-validation-for="JenisKelamin" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Alamat" class="control-label">Alamat</label>
                        <textarea asp-for="Alamat" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Alamat" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="NoTelepon" class="control-label">No. Telepon</label>
                                <input asp-for="NoTelepon" class="form-control" />
                                <span asp-validation-for="NoTelepon" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="NamaOrtu" class="control-label">Nama Orang Tua</label>
                                <input asp-for="NamaOrtu" class="form-control" />
                                <span asp-validation-for="NamaOrtu" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <div class="form-check">
                            <input asp-for="IsActive" class="form-check-input" />
                            <label asp-for="IsActive" class="form-check-label">Aktif</label>
                        </div>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">💾 Update</button>
                        <a asp-action="MasterSiswa" class="btn btn-secondary">← Kembali</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}