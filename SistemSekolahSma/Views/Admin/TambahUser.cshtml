@model SistemSekolahSMA.Models.User
@{
    ViewData["Title"] = "Tambah User";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4><i class="fas fa-user-plus"></i> Tambah User Baru</h4>
                </div>
                <div class="card-body">
                    <form asp-action="TambahUser" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Username" class="form-label">Username</label>
                                    <input asp-for="Username" class="form-control" placeholder="Masukkan username" />
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Password" class="form-label">Password</label>
                                    <input asp-for="Password" type="password" class="form-control" placeholder="Masukkan password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label">Email</label>
                                    <input asp-for="Email" type="email" class="form-control" placeholder="Masukkan email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Role" class="form-label">Role</label>
                                    <select asp-for="Role" class="form-select">
                                        <option value="">-- Pilih Role --</option>
                                        <option value="Admin">Admin</option>
                                        <option value="Guru">Guru</option>
                                    </select>
                                    <span asp-validation-for="Role" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <div class="form-check">
                                        <input asp-for="IsActive" class="form-check-input" checked />
                                        <label asp-for="IsActive" class="form-check-label">
                                            User Aktif
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <hr>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save"></i> Simpan
                                </button>
                                <a asp-action="ManajemenUser" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Kembali
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}